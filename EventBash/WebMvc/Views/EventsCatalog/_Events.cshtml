@model WebMvc.Models.EventItem




<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.EventPictureUrl" />
    <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
    <div class="esh-catalog-name">
        <span>@Model.EventName</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.EventCost.ToString("N2")</span>
    </div>
    <input type="hidden" asp-for="@Model.EventCategory" name="category" />
    <input type="hidden" asp-for="@Model.EventCategoryId" name="categoryId" />
    <input type="hidden" asp-for="@Model.EventVenue" name="venue" />
    <input type="hidden" asp-for="@Model.EventVenueId" name="venueId" />
    <input type="hidden" asp-for="@Model.EventDescription" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.EventCost" name="name" />
    <input type="hidden" asp-for="@Model.EventPictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.EventCost" name="price" />
</form>